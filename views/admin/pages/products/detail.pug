extends ../../layouts/default.pug
include ../../mixins/show-alert.pug

block main
    +alert-error(5000)

    .container
        .row
            .col-md-8.offset-md-2
                .card
                    .card-header
                        h1(class="mb-4") Chi tiết sản phẩm

                    .card-body
                        if(product.thumbnail)
                            .text-center.mb-4
                                img(
                                    src=product.thumbnail
                                    class="img-thumbnail"
                                    style="width: 200px"
                                )

                        if(product.title)
                            h2(class="mb-4") #{product.title}

                        if(product.price)
                            h4(class="mb-4") Giá: <b>#{product.price} VND</b>

                        if(product.discountPercentage)
                            h4(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

                        if(product.stock)
                            h4(class="mb-4") Còn lại: <b>#{product.stock}</b>

                        if(product.status)
                            .mb-4
                                span Trạng thái:
                                if(product.status == "active")
                                    span(class="badge badge-success") Đang kinh doanh 
                                else 
                                    span(class="badge badge-danger") Ngừng kinh doanh

                        if(product.position)
                            h4(class="mb-4") Vị trí: <b>#{product.position}</b>

                        if(product.description)
                            h4(class="mb-4") #{product.description}

                        .text-center
                            a(
                                href=`${prefixAdmin}/products/edit/${product.id}`
                                class="btn btn-warning"
                            ) Chỉnh sửa

    script(src="/admin/js/product.js")